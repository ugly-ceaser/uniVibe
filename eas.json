{
  "cli": {
    "version": ">= 5.4.0",
    "appVersionSource": "remote",
    "packageManager": "npm"
  },
  "build": {
    "production": {
      "node": "18.19.0",
      "npm": "9.8.1",
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_API_URL": "https://univibesbackend.onrender.com/api/v1",
        "GRADLE_OPTS": "-Dorg.gradle.jvmargs=-Xmx2048m"
      }
    },
    "dev": {
      "node": "18.19.0",
      "npm": "9.8.1",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_API_URL": "https://univibesbackend.onrender.com/api/v1"
      }
    }
  }
}


