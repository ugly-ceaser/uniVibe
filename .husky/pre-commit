#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Checking code style..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the issues before committing."
  exit 1
fi

# Run formatting check
echo "ğŸ¨ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed. Please run 'npm run format' to fix formatting issues."
  exit 1
fi

# Run type checking
echo "ğŸ” Running TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix the type errors before committing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm test -- --passWithNoTests
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!" 